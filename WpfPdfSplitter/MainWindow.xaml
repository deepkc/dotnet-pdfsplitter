<Window x:Class="WpfPdfSplitter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PDF Splitter" Height="400" Width="600">
    <Grid>
        <TextBox Name="TxtPdfPath" HorizontalAlignment="Left" VerticalAlignment="Top" Width="400" Margin="10"/>
        <Button Name="BtnSelectPdf" Content="Select PDF" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="420,10,0,0" Click="BtnSelectPdf_Click"/>
        <Button Name="BtnSplitPdf" Content="Split PDF" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="420,40,0,0" Click="BtnSplitPdf_Click"/>
        <Image Name="PdfPreviewImage" HorizontalAlignment="Left" VerticalAlignment="Top" Width="500" Height="300" Margin="10,70,0,0"/>
    </Grid>
</Window>
